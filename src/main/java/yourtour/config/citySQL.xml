<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="city">

	<resultMap type="city" id="cityRes">
	
		<result property="no" column="no" />
		<result property="name" column="name" />
		<result property="content" column="content" />
		<result property="country" column="country" />
	</resultMap>
	
	<resultMap type="cityImg" id="cityImgRes">
		<!-- City_Img -->
		<result property="no" column="no" />
		<result property="org_name" column="org_name"/>
		<result property="sav_name" column="sav_name"/>
		<result property="city_no" column="city_no"/>
	</resultMap>
	
	<!-- SELECT -->
	<!-- 일정 만들기- 도시 리스트 검색 -->
	<select id="schcitySearch" resultMap="cityRes" parameterType="HashMap">
		SELECT *
		FROM CITY
		WHERE country = #{country} and name like #{keyword}
	</select>
	
	<!-- 일정 만들기 - 도시 리스트 불러오기 -->
	<select id="schCityList" resultMap="cityRes" parameterType="Integer">
		SELECT *
		FROM CITY 
		where country = #{country}
	</select>
	
	<!-- 여행지 탭에서 도시 리스트 불러오기 -->
	<select id="cityList" resultMap="cityRes" parameterType="Integer">
		SELECT *
		FROM CITY
		WHERE country = #{country}
		ORDER BY NO ASC
	</select>
	
	<!-- 도시 글쓰기 폼에서 국가 이름 불러오기 -->
	<select id="selectCountry" resultType="String" parameterType="Integer">
		SELECT COUNTRY FROM CITY
		WHERE country = #{country}
	</select>
	
	<!-- INSERT -->
	<!-- 도시 글쓰기 -->
	<insert id="cityWrite" parameterType="city">
		insert into city(no, name, content, country)
		values(CITY_NO_SEQ.NEXTVAL, #{name}, #{content}, #{country})
	</insert>
	
	<!-- 파일 업로드 전에 도시 번호 값 보내주기 -->
	<select id="selectSeq" resultType="Integer">
		SELECT MAX(NO) FROM CITY
	</select>
	
	<!-- 파일 업로드 -->
	<insert id="fileupload" parameterType="HashMap">
		insert into city_img(no, org_name, sav_name, city_no)
		values(CITY_ING_NO_SEQ.NEXTVAL, #{org_name}, #{sav_name}, #{city_no})
	</insert>
	
	<!-- 도시 상세보기 -->
	<select id="cityDetail" resultMap="cityRes" parameterType="Integer">
		SELECT NO,NAME,CONTENT,COUNTRY
		FROM CITY
		WHERE NO = #{no}
	</select>
	
	<!-- 도시 상세보기 할때 이미지 리스트 불러오기 -->
	<select id="city_imgList" resultMap="cityRes" parameterType="Integer">
		SELECT *
		FROM CITY_IMG
		WHERE NO = #{no}
	</select>
	
	<!-- 도시 상세보기 할때 이미지 갤러리 메인 이미지 불러오기 -->
	<select id="city_mainImg" resultMap="cityRes" parameterType="Integer">
		SELECT *
		FROM CITY_IMG
		WHERE NO = #{no} AND C_IMG_INDEX = 1
	</select>

</mapper>