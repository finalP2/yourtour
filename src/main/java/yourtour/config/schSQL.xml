	<!-- 일정 게시판 ↓↓↓↓ -->
	<!-- 공통으로 사용할 select절 정의 -->
	<sql id="select-all-list">
		SELECT * FROM SCH 
	</sql>
	
	<!-- 일정 게시판 리스트 보기 -->
	<select id="scheduleList" resultMap="scheduleRes">
		<include refid="select-all-list" />
		ORDER BY NO DESC
	</select>
	
	<!-- 일정 번호와 세션 아이디로 글 검색-->
	<select id="scheduleSelectOne" resultMap="scheduleRes" parameterType="schedule">
		select * from sch 
		where no = #{no}
	</select>
	
	<!-- 일정 게시판 글 쓰기 -->
	<insert id="scheduleWrite" parameterType="schedule">
		INSERT INTO SCH(NO, email, name, start_date, end_date, period, season,cost,theme) 
		VALUES(SCH_NO_SEQ.NEXTVAL, #{email}, #{name}, #{start_date}, #{end_date}, #{period}, #{season}, #{cost}, #{theme})
	</insert>
	
	<!-- 일정 게시판 가장 최근에 쓴 글 검색 -->
	 <select id="scheduleLastWrite" resultMap="scheduleRes" parameterType="String">
		select * from sch 
		where no = (select max(no) from sch) and email = #{email}
	</select>
	
	<!-- 일별일일 추가 -->
	<insert id="scheduleDayinsert" parameterType="scheduleDay">
		INSERT INTO SCH_DAY(NO, DAY, SCH_NO) 
		VALUES(SCH_DAT_NO_SEQ.NEXTVAL, #{day}, #{sch_no})
	</insert>
	
	
 </mapper>